#include <iostream>
#include <cmath>
#include <math.h>

using namespace std;
int main()
{
int wage , extra , gain;
int shift1 , shift2 , shift3;
int lastshift1 , lastshift2 , lastshift3;

shift1=30;
shift2=35;
shift3=40;
// in this case you can see that if you work more than .. hour you will be paid 30//
cout<<"Enter your wage:"<<" ";
cin>>wage;
cout<<"Enter your extra hour u work:"<<" ";
cin<<extra;
/*right here we know how much is our wage and how much we work extra.
by using this data we can make if else loop and calculate our net gain.*/

if(extra<=10){
    lastshift1=extra*shift1;
cout<<"--------------------------"<<endl;
cout<<"Extra gain:"<<" "<<lastshift1<<endl;
cout<<"--------------------------"<<endl;
gain=wage+lastshift1;
cout<<"Total gain:"<<" "<<gain<<endl;
cout<<"--------------------------";

else if(extra<=20){
    lastshift2=extra*shift2;
cout<<"--------------------------"<<endl;
cout<<"Extra gain:"<<" "<<lastshift2<<endl;
cout<<"--------------------------"<<endl;
gain=wage+lastshift2;
cout<<"Total gain:"<<" "<<gain<<endl;
cout<<"--------------------------";


